<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.client.controller.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefWidth="400.0" spacing="20.0">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"
                       text="Welcome, please log in!"/>
                <TextField fx:id="loginField" prefWidth="300.0" promptText="Email" onAction="#logIn"/>
                <PasswordField fx:id="passwordField" prefWidth="300.0" promptText="Password" onAction="#logIn"/>
                <Button fx:id="logInButton" onAction="#logIn" prefWidth="300.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Log In"/>
            </children>
        </VBox>
    </children>
</AnchorPane>

