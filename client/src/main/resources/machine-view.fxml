<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.machine.MachineController">
    <children>
        <Button layoutX="20.0" layoutY="20.0" onAction="#goToMainView" text="Back to Main" />
        <Button fx:id="addDryerButton" layoutX="120.0" layoutY="20.0" text="Add Dryer" />
        <Button fx:id="addDyeingButton" layoutX="204.0" layoutY="20.0" text="Add Dyeing" />
        <Button layoutX="869.0" layoutY="18.0" onAction="#refreshMachines" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Refresh" />

        <ScrollPane hbarPolicy="ALWAYS" layoutX="20.0" layoutY="80.0" prefHeight="600.0" prefWidth="900.0" vbarPolicy="NEVER">
            <content>
                <GridPane fx:id="machineGrid" hgap="20.0" vgap="20.0">

                </GridPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
