<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.user.ChangePasswordController">
    <children>
        <VBox spacing="15" layoutX="50.0" layoutY="50.0" prefWidth="300.0">
            <Label text="Change Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

            <Label text="Old Password:"/>
            <PasswordField fx:id="oldPasswordField" promptText="Enter Old Password"/>

            <Label text="New Password:"/>
            <PasswordField fx:id="newPasswordField" promptText="Enter New Password"/>

            <Label text="Confirm New Password:"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password"/>

            <Button text="Change Password" onAction="#handleChangePassword"
                    style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #FF5252; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </VBox>
    </children>
</AnchorPane>
