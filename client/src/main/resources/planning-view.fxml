<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="701.0"
            prefWidth="1141.0"
            style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10;"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.client.controller.planning.PlanningController">

    <TableView fx:id="jobTable" layoutX="20" layoutY="60" prefHeight="626.0" prefWidth="1103.0">
        <columns>
            <TableColumn fx:id="jobIdColumn" prefWidth="100" text="Job ID"/>
            <TableColumn fx:id="startTimeColumn" prefWidth="150" text="Start Time"/>
            <TableColumn fx:id="endTimeColumn" prefWidth="150" text="End Time"/>
            <TableColumn fx:id="machineNameColumn" prefWidth="150" text="Machine Name"/>
            <TableColumn fx:id="machineStatusColumn" prefWidth="150" text="Machine Status"/>
            <TableColumn fx:id="programNameColumn" prefWidth="150" text="Program Name"/>
            <TableColumn fx:id="recipeNameColumn" prefWidth="150" text="Recipe Name"/>
            <TableColumn fx:id="detailsColumn" prefWidth="100" text="Details"/>
        </columns>
    </TableView>


    <HBox alignment="center" layoutX="20" layoutY="480" spacing="15"/>

    <Button fx:id="goToMainViewButton" layoutX="20.0" layoutY="18.0" maxWidth="150" style="-fx-font-size: 14px;"
            text="Back to Main View"/>
    <Button fx:id="refreshButton" layoutX="1027.0" layoutY="18.0" maxWidth="150"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Refresh Jobs"/>
    <Button fx:id="addJobButton" layoutX="165.0" layoutY="18.0" maxWidth="150" style="-fx-font-size: 14px;"
            text="Add Job"/>

</AnchorPane>
