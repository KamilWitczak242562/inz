<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.CreateUserController">
    <children>
        <VBox spacing="15" layoutX="100.0" layoutY="80.0" prefWidth="400.0">
            <Label text="Create New User" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

            <Label text="First Name:"/>
            <TextField fx:id="firstNameField" promptText="Enter First Name"/>

            <Label text="Last Name:"/>
            <TextField fx:id="lastNameField" promptText="Enter Last Name"/>

            <Label text="Email:"/>
            <TextField fx:id="emailField" promptText="Enter Email"/>

            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Enter Password"/>

            <Label text="Role:"/>
            <ComboBox fx:id="roleComboBox" promptText="Select Role"/>

            <Button text="Create User" onAction="#handleCreateUser"
                    style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #FF5252; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </VBox>
    </children>
</AnchorPane>
